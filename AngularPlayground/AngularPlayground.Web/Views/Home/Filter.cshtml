
@{
    ViewBag.Title = "Filter";
}

<h2>Filter</h2>

<div class="row" ng-app ng-init="friends=[{name:'John', phone:'555-1212', age:26},
     {name: 'Mary', phone: '555-9867', age:19},
     {name: 'Jojo', phone: '867-5309', age: 35},
     {name: 'Booner', phone: '161-6116', age:60}]">
    <div class="col-sm-4">
        <input type="text" ng-model="friendFilter"/>
    </div>
    <div class="col-sm-4">
        <ul>
            <li ng-repeat="friend in friends | filter:{name:friendFilter}| orderBy:'name'">
                {{friend.name}},{{friend.phone}}, age: {{friend.age}}
            </li>
        </ul>
    </div>
</div>