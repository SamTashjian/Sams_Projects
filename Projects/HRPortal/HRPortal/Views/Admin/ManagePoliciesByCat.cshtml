@model IEnumerable<HRPortal.Models.Data.Policy>

@{
    ViewBag.Title = "ManagePoliciesByCat";
}

@*<h2>Need to figure out how to get each specific category to print here, probably need to create a new vm</h2>*@


<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Category)*@Category
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.PolicyTitle)*@ Policy Title
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.PolicyContent)*@ Content
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyContent)
            </td>
            <td>

                @Html.ActionLink("Delete", "DeletePolicy", "Admin", new { policyTitle = item.PolicyTitle}, null)
            </td>
        </tr>
    }

</table>

<div align="center">
    <p>@Html.ActionLink("Return to Manage Policies", "ManagePolicies", "Admin")</p>
</div>